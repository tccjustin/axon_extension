    "menus": {},
    "configuration": {
      "title": "Axon",
      "properties": {
        "axon.fwdn.exePath": {
          "type": "string",
          "default": "",
          "description": "FWDN executable path (비어있으면 extension 내장 버전 사용)"
        },
        "axon.projectType": {
          "type": "string",
          "enum": [
            "mcu_project",
            "yocto_project",
            "yocto_project_autolinux"
          ],
          "default": "",
          "description": "Project type (automatically sets buildAxonFolderName)"
        },
        "axon.buildAxonFolderName": {
          "type": "string",
          "default": "",
          "description": "[Auto-set by projectType] Project folder name to search for (mcu-tcn100x or build-axon)"
        },
        "axon.yocto.projectRoot": {
          "type": "string",
          "default": "",
          "description": "Yocto project root directory path (automatically set when creating a project)"
        },
        "axon.yocto.imagesDir": {
          "type": "string",
          "default": "",
          "description": "Yocto images directory path where SD_Data.gpt is located (automatically set when found)"
        },
        "axon.mcu.projectRoot": {
          "type": "string",
          "default": "",
          "description": "MCU project root directory path (automatically set when detecting tcn100x_defconfig)"
        },
        "axon.bootFirmware.path": {
          "type": "string",
          "default": "",
          "description": "Boot Firmware directory path (automatically set when detecting prebuilt folder)"
        },
        "axon.wsl.distroName": {
          "type": "string",
          "default": "Ubuntu",
          "description": "WSL distribution name for \\\\wsl$ path conversion (e.g., Ubuntu, Ubuntu-20.04, Debian)"
        },
        "axon.devtool.recipes": {
          "type": "array",
          "default": [],
          "description": "List of devtool recipes that have been created (automatically managed)"
        },
        "axon.yocto.sourceMirror": {
          "type": "string",
          "default": "",
          "description": "Source Mirror 경로 (Yocto 다운로드 시간 단축)",
          "scope": "machine"
        },
        "axon.yocto.buildtool": {
          "type": "string",
          "default": "",
          "description": "Build Tools 경로 (Yocto 빌드 도구 재사용)",
          "scope": "machine"
        },
        "axon.yocto.autolinuxGitUrl": {
          "type": "string",
          "default": "ssh://bitbucket.telechips.com:7999/script/build-autolinux",
          "description": "Autolinux build script Git Repository URL",
          "scope": "window"
        },
        "axon.yocto.manifestGitUrl": {
          "type": "string",
          "default": "ssh://git@bitbucket.telechips.com:7999/manifest/manifest-cgw.git",
          "description": "Yocto Manifest Git Repository URL",
          "scope": "window"
        },
        "axon.mcu.gitUrl": {
          "type": "string",
          "default": "ssh://git@bitbucket.telechips.com:7999/linux_yp4_0_cgw/mcu-tcn100x.git",
          "description": "MCU Standalone Project Git Repository URL",
          "scope": "window"
        },
        "axon.mcu.buildtool": {
          "type": "string",
          "default": "",
          "description": "MCU Build Tools Path (optional, for faster setup)",
          "scope": "machine"
        },
        "axon.yocto.apBuildScript": {
          "type": "string",
          "default": "poky/meta-telechips/meta-dev/meta-cgw-dev/cgw-build.sh",
          "description": "AP Build Script path (relative to project root)",
          "scope": "window"
        },
        "axon.yocto.apImageName": {
          "type": "string",
          "default": "telechips-cgw-image",
          "description": "AP Image name for bitbake build",
          "scope": "window"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "axon-boot-firmware",
        "required": [],
        "properties": {
          "label": {
            "type": "string",
            "description": "Task label"
          }
        }
      },
      {
        "type": "axon-simple-fwdn",
        "required": [],
        "properties": {
          "label": {
            "type": "string",
            "description": "Task label"
          }
        }
      },
      {
        "type": "axon-mcu-build",
        "required": [],
        "properties": {
          "label": {
            "type": "string",
            "description": "Task label"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "precompile": "node -e \"try{const fs=require('fs'),crypto=require('crypto');const lock='package-lock.json';const nm='node_modules';const mark=nm+'/.depshash';if(!fs.existsSync(nm)||!fs.existsSync(lock)||!fs.existsSync(mark)){process.exit(1);}const h=crypto.createHash('sha256').update(fs.readFileSync(lock,'utf8')).digest('hex');process.exit(fs.readFileSync(mark,'utf8')===h?0:1);}catch(e){process.exit(1)}\" || (npm ci --prefer-offline --no-audit --progress=false && node -e \"const fs=require('fs'),crypto=require('crypto');const h=crypto.createHash('sha256').update(fs.readFileSync('package-lock.json','utf8')).digest('hex');fs.mkdirSync('node_modules',{recursive:true});fs.writeFileSync('node_modules/.depshash',h)\")",
    "copy-webview": "node -e \"const fs=require('fs'),path=require('path');const src='src/webview',dst='out/webview';fs.mkdirSync(dst,{recursive:true});fs.readdirSync(src).forEach(f=>{if(f.endsWith('.html')||f.endsWith('.css')||f.endsWith('.js')){fs.copyFileSync(path.join(src,f),path.join(dst,f));}});\"",
    "compile": "tsc -p ./ && npm run copy-webview",
    "compile:fast": "tsc -p ./ --incremental && npm run copy-webview",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --allow-missing-repository",
    "package:no-deps": "vsce package --no-dependencies --allow-missing-repository",
    "package:patch": "vsce package --patch --allow-missing-repository",
    "package:minor": "vsce package --minor --allow-missing-repository",
    "package:major": "vsce package --major --allow-missing-repository",
    "build": "npm run compile:fast && npm run package:no-deps",
    "build:full": "npm run compile && npm run package",
    "package:auto": "vsce package --allow-missing-repository",
    "build:clean": "npm run compile && echo y | vsce package --out axon-$(date +%Y%m%d-%H%M%S).vsix --allow-missing-repository",
    "publish": "vsce publish --allow-missing-repository",
    "publish:patch": "npm run build:full && vsce publish patch --allow-missing-repository",
    "publish:minor": "npm run build:full && vsce publish minor --allow-missing-repository",
    "publish:major": "npm run build:full && vsce publish major --allow-missing-repository"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.2",
    "typescript": "^4.9.4",
    "vsce": "^2.12.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43"
  }
}
