{
  "name": "axon",
  "displayName": "Axon",
  "description": "A powerful VS Code extension for enhanced development experience",
  "version": "0.2.0",
  "extensionKind": ["ui"],
  "repository": {
    "type": "git",
    "url": "https://github.com/tccjustin/axon_extension.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:axon.FWDN_MCU",
    "onCommand:axon.configureBootFirmware",
    "onCommand:axon.configureFwdnExe",
    "onCommand:axon.FWDN_ALL",
    "onCommand:axon.autoDetectBootFirmware"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "axon.FWDN_MCU",
        "title": "FWDN MCU (Step 1-3)",
        "category": "Axon"
      },
      {
        "command": "axon.configureBootFirmware",
        "title": "Configure Boot Firmware Path",
        "category": "Axon"
      },
      {
        "command": "axon.configureFwdnExe",
        "title": "Configure FWDN Executable Path",
        "category": "Axon"
      },
      {
        "command": "axon.FWDN_ALL",
        "title": "FWDN ALL (Step 1-4)",
        "category": "Axon"
      },
      {
        "command": "axon.autoDetectBootFirmware",
        "title": "Auto-detect Boot Firmware Path",
        "category": "Axon"
      }
    ],
    "configuration": {
      "title": "Axon",
      "properties": {
        "axon.fwdn.exePath": {
          "type": "string",
          "default": "C:\\Users\\jhlee17\\work\\FWDN\\fwdn.exe",
          "description": "FWDN executable path"
        },
        "axon.bootFirmware.path": {
          "type": "string",
          "default": "Z:\\work1\\can2ethimp\\mcu-tcn100x\\boot-firmware-tcn100x",
          "description": "Boot firmware path (SMB network drive)"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "axon-boot-firmware",
        "required": [],
        "properties": {
          "label": {
            "type": "string",
            "description": "Task label"
          }
        }
      },
      {
        "type": "axon-simple-fwdn",
        "required": [],
        "properties": {
          "label": {
            "type": "string",
            "description": "Task label"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "package:patch": "vsce package --patch",
    "package:minor": "vsce package --minor",
    "package:major": "vsce package --major",
    "build": "npm run compile && npm run package:auto",
    "package:auto": "echo y | vsce package",
    "build:clean": "npm run compile && echo y | vsce package --out axon-$(date +%Y%m%d-%H%M%S).vsix"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.2",
    "typescript": "^4.9.4",
    "vsce": "^2.12.0"
  }
}